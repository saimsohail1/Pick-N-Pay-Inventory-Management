{
  "appId": "com.picknpay.inventory",
  "productName": "InventoryManagementSystem",
  "directories": {
    "output": "dist"
  },
  "files": [
    "**/*",
    "!dist/**/*",
    "!node_modules/.cache/**/*"
  ],
  "asar": true,
  "asarUnpack": [
    "backend/**"
  ],
  "extraMetadata": {
    "main": "main.js"
  },
  "extraResources": [
    {
      "from": "../backend/target/",
      "to": "backend",
      "filter": ["*.jar"]
    }
  ],
  "win": {
    "target": "nsis"
  }
}
